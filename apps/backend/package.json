{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "APP_ENV=development tsx watch --env-file=.env src/index.ts",
    "dev:migrate": "APP_ENV=development tsx --env-file=.env src/migrator.ts",
    "test:migrate": "APP_ENV=test tsx --env-file=.env src/migrator.ts",
    "test:unit": "APP_ENV=test vitest run tests/unit",
    "test:component:prepare": "docker compose up -d --wait",
    "test:component": "pnpm test:component:prepare && APP_ENV=test pnpm test:migrate && APP_ENV=test vitest NODE_ENV=test --fileParallelism=false run tests/component --watch=false && pnpm test:component:teardown",
    "test:component:teardown": "docker compose down",
    "test": "pnpm test:unit && pnpm test:component"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "better-auth": "^1.3.0",
    "cors": "^2.8.5",
    "es-toolkit": "^1.39.10",
    "express": "^5.1.0",
    "kysely": "^0.28.3",
    "pg": "^8.16.3",
    "zod": "^4.0.9"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
